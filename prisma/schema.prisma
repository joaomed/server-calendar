// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  // provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Tarefa {
  id          String @id @default(uuid())
  title       String
  description String
  date        String
  hourStart   Int
  hourEnd     Int
  location    String

  createdAt DateTime @default(now())
}
